{
  "compilerOptions": {
    "outDir": "./dist", // Указываем папку для компиляции
    "rootDir": "./src", // Указываем корневую папку исходных файлов
    "esModuleInterop": true, // Для правильной работы с модулями
    "target": "ES6", // Указываем целевую версию JS (можно изменить)
    "module": "CommonJS", // Используем CommonJS модули
    "strict": true, // Включаем строгую типизацию
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
    "moduleResolution": "node",
    "skipLibCheck": true // Пропускаем проверку типов библиотек
  },
  "include": [
    "src/**/*.ts" // Указываем папку с исходниками
  ],
  "exclude": [
    "node_modules" // Исключаем папку с зависимостями
  ]
}
